<div class="row">
  <div class="col-8">
    <div class="card">
      <div class="card-header">
        <h4 class="card-text">
          About Us
        </h4><!-- class = card-text -->
      </div><!-- class = card-header -->
      <div class="card-body">
        We are a volunteer Oranization that does volunteer work!
      </div><!-- class = card-body -->
    </div><!-- class = card -->
  </div><!-- class = col-md-8 -->
  <div class="col-4">
    <div class="card">
      <div class="card-header">
        <h4 class="card-text">
          Start a Project
        </h4><!-- class = card-text -->
      </div><!-- class = card-header -->
      <div class="card-body">
        <form action="/projects" method="post">
          <div class="form-group">
            <input id="id" name="id" type="hidden" value=1>
            <label for="title">Project Title</label>
            <input id="title" name="title" class="form-control" type="text">
          </div>
          <button type="submit" class="btn">Create Project</button>
        </form>
      </div><!-- class = card-body -->
    </div><!-- class = card -->
    <div class="card">
      <div class="card-header">
        <h4 class="card-text">
          Active Projects
        </h4><!-- class = card-text -->
      </div><!-- class = card-header -->
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <% @projects.sort_by(&:id).each do |project| %>
          <li class="list-group-item nav-item"><a class="nav-link" href="/projects/<%= project.id %>"><%= project.title %></a></li>
          <% end %>
        </ul>
      </div><!-- class = card-body -->
    </div><!-- class = card -->

  </div><!-- class = col-md-4 -->
</div> <!-- class = row -->
